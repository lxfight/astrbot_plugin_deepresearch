{
    "search_engines": {
        "description": "搜索引擎配置",
        "type": "object",
        "items": {
            "enabled_engines": {
                "description": "启用的搜索引擎列表",
                "type": "list",
                "default": ["duckduckgo", "bing", "google"],
                "hint": "按优先级排序，支持: duckduckgo, bing, google, serper, baidu"
            },
            "max_results_per_engine": {
                "description": "每个搜索引擎返回的最大结果数",
                "type": "int",
                "default": 10,
                "hint": "控制单个搜索引擎返回的结果数量"
            },
            "search_timeout": {
                "description": "搜索请求超时时间(秒)",
                "type": "int",
                "default": 30
            },
            "enable_parallel_search": {
                "description": "启用并行搜索",
                "type": "bool",
                "default": true,
                "hint": "同时使用多个搜索引擎提高效率"
            }
        }
    },
    "google_search": {
        "description": "Google 搜索配置",
        "type": "object",
        "items": {
            "cse_api_key": {
                "description": "Google Custom Search API Key",
                "type": "string",
                "default": "",
                "hint": "从 Google Cloud Console 获取"
            },
            "cse_cx": {
                "description": "Google Custom Search Engine ID",
                "type": "string",
                "default": "",
                "hint": "自定义搜索引擎的唯一标识符"
            }
        }
    },
    "bing_search": {
        "description": "Bing 搜索配置",
        "type": "object",
        "items": {
            "api_key": {
                "description": "Bing Search API Key",
                "type": "string",
                "default": "",
                "hint": "从 Azure Cognitive Services 获取"
            },
            "endpoint": {
                "description": "Bing Search API 端点",
                "type": "string",
                "default": "https://api.bing.microsoft.com/v7.0/search"
            }
        }
    },
    "serper_search": {
        "description": "Serper.dev 搜索配置",
        "type": "object",
        "items": {
            "api_key": {
                "description": "Serper.dev API Key",
                "type": "string",
                "default": "",
                "hint": "从 serper.dev 获取，提供 Google 搜索结果"
            }
        }
    },
    "baidu_search": {
        "description": "百度搜索配置",
        "type": "object",
        "items": {
            "api_key": {
                "description": "百度搜索 API Key",
                "type": "string",
                "default": "",
                "hint": "百度智能云搜索 API 密钥"
            },
            "secret_key": {
                "description": "百度搜索 Secret Key",
                "type": "string",
                "default": "",
                "hint": "百度智能云搜索 Secret Key"
            }
        }
    },
    "news_search": {
        "description": "新闻搜索配置",
        "type": "object",
        "items": {
            "enabled": {
                "description": "启用新闻搜索",
                "type": "bool",
                "default": true,
                "hint": "在研究中包含最新新闻内容"
            },
            "news_api_key": {
                "description": "NewsAPI Key",
                "type": "string",
                "default": "",
                "hint": "从 newsapi.org 获取"
            },
            "days_range": {
                "description": "新闻搜索时间范围(天)",
                "type": "int",
                "default": 30,
                "hint": "搜索多少天内的新闻"
            },
            "max_articles": {
                "description": "最大新闻文章数",
                "type": "int",
                "default": 20
            }
        }
    },
    "academic_search": {
        "description": "学术搜索配置",
        "type": "object",
        "items": {
            "enabled": {
                "description": "启用学术搜索",
                "type": "bool",
                "default": false,
                "hint": "搜索学术论文和研究资料"
            },
            "semantic_scholar_api_key": {
                "description": "Semantic Scholar API Key",
                "type": "string",
                "default": "",
                "hint": "从 Semantic Scholar 获取"
            },
            "arxiv_enabled": {
                "description": "启用 arXiv 搜索",
                "type": "bool",
                "default": true,
                "hint": "搜索 arXiv 预印本论文"
            },
            "max_papers": {
                "description": "最大论文数量",
                "type": "int",
                "default": 15
            }
        }
    },
    "content_processing": {
        "description": "内容处理配置",
        "type": "object",
        "items": {
            "enable_web_extraction": {
                "description": "启用网页内容提取",
                "type": "bool",
                "default": true,
                "hint": "自动提取搜索结果中网页的详细内容"
            },
            "extraction_timeout": {
                "description": "网页提取超时时间(秒)",
                "type": "int",
                "default": 15
            },
            "max_content_length": {
                "description": "单个网页最大内容长度",
                "type": "int",
                "default": 10000,
                "hint": "超过此长度的内容将被截断"
            },
            "enable_content_filtering": {
                "description": "启用内容质量过滤",
                "type": "bool",
                "default": true,
                "hint": "过滤低质量或不相关的内容"
            },
            "quality_threshold": {
                "description": "内容质量阈值(0-1)",
                "type": "float",
                "default": 0.6,
                "hint": "低于此值的内容将被过滤"
            }
        }
    },
    "llm_config": {
        "description": "LLM模型配置",
        "type": "object",
        "items": {
            "model_name": {
                "description": "指定LLM模型名称",
                "type": "string",
                "default": "",
                "hint": "留空则使用AstrBot默认配置的LLM模型"
            },
            "max_tokens_per_request": {
                "description": "单次请求最大Token数",
                "type": "int",
                "default": 4000,
                "hint": "控制单次LLM请求的Token消耗"
            },
            "temperature": {
                "description": "LLM温度参数(0-1)",
                "type": "float",
                "default": 0.7,
                "hint": "控制生成内容的随机性"
            },
            "max_document_chunk_size": {
                "description": "文档切块最大字符数",
                "type": "int",
                "default": 4000,
                "hint": "超大文档将被切分为此大小的文本块"
            },
            "min_doc_for_chunking": {
                "description": "触发文档切块的最小字符数",
                "type": "int",
                "default": 6000,
                "hint": "小于此大小的文档将不进行切块处理"
            }
        }
    },
    "research_workflow": {
        "description": "研究流程配置",
        "type": "object",
        "items": {
            "max_search_iterations": {
                "description": "最大搜索迭代次数",
                "type": "int",
                "default": 3,
                "hint": "深度研究的最大搜索轮次"
            },
            "enable_cross_reference": {
                "description": "启用交叉引用分析",
                "type": "bool",
                "default": true,
                "hint": "分析不同来源之间的关联性"
            },
            "enable_fact_checking": {
                "description": "启用事实核查",
                "type": "bool",
                "default": true,
                "hint": "对关键信息进行多源验证"
            },
            "research_depth": {
                "description": "研究深度级别",
                "type": "string",
                "default": "medium",
                "options": ["shallow", "medium", "deep"],
                "hint": "控制研究的详细程度和时间消耗"
            }
        }
    },
    "output_config": {
        "description": "报告输出配置",
        "type": "object",
        "items": {
            "default_format": {
                "description": "默认报告输出格式",
                "type": "string",
                "default": "md",
                "options": ["md", "html", "image", "pdf"],
                "hint": "用户未指定格式时的默认输出格式"
            },
            "include_sources": {
                "description": "报告中包含信息源",
                "type": "bool",
                "default": true,
                "hint": "在报告末尾列出所有参考来源"
            },
            "include_search_queries": {
                "description": "报告中包含搜索查询",
                "type": "bool",
                "default": false,
                "hint": "显示研究过程中使用的搜索查询"
            },
            "max_report_sections": {
                "description": "报告最大章节数",
                "type": "int",
                "default": 8,
                "hint": "限制生成报告的章节数量"
            },
            "temp_file_retention_hours": {
                "description": "临时文件保留时间(小时)",
                "type": "int",
                "default": 24,
                "hint": "生成的报告文件链接有效期"
            }
        }
    },
    "performance_config": {
        "description": "性能和限制配置",
        "type": "object",
        "items": {
            "max_concurrent_tasks": {
                "description": "最大并发任务数",
                "type": "int",
                "default": 3,
                "hint": "同时进行的深度研究任务数量限制"
            },
            "task_timeout_minutes": {
                "description": "单个任务超时时间(分钟)",
                "type": "int",
                "default": 30,
                "hint": "单个研究任务的最大执行时间"
            },
            "enable_caching": {
                "description": "启用搜索结果缓存",
                "type": "bool",
                "default": true,
                "hint": "缓存搜索结果以提高性能"
            },
            "cache_ttl_hours": {
                "description": "缓存生存时间(小时)",
                "type": "int",
                "default": 6,
                "hint": "搜索结果缓存的有效期"
            }
        }
    },
    "network_config": {
        "description": "网络配置",
        "type": "object",
        "items": {
            "enable_proxy": {
                "description": "启用代理",
                "type": "bool",
                "default": false
            },
            "proxy_url": {
                "description": "代理服务器地址",
                "type": "string",
                "default": "",
                "hint": "格式: http://host:port 或 https://host:port"
            },
            "user_agent": {
                "description": "HTTP请求User-Agent",
                "type": "string",
                "default": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
            },
            "max_retries": {
                "description": "网络请求最大重试次数",
                "type": "int",
                "default": 3
            }
        }
    }
}